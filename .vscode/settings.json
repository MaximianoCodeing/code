{
  "files.encoding": "utf8",
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.rulers": [80],

  // Format on save (require recommended extensions).
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": { "source.organizeImports": "always" },
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // File nesting patterns (enable as you wish).
  // "explorer.fileNesting.enabled": true,
  // "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.tsx": "${capture}.module.scss,${capture}.stories.tsx,${capture}.test.ts",
    "*.module.scss": "${capture}.stories.tsx",
    "tsconfig.json": "tsconfig.tsbuildinfo",
    "vitest.config.ts": "vitest.shims.d.ts",
    "next.config.ts": "next-env.d.ts",
    "package.json": "pnpm-lock.yaml",
    "readme.md": "license, contributing.md"
  },

  // Support ts plugin including css modules.
  "typescript.tsdk": "node_modules/typescript/lib",

  // Code spell checker (require recommended extensions).
  "cSpell.ignorePaths": [
    ".next",
    "node_modules",
    "pnpm-lock.yaml",
    "next-env.d.ts"
  ],
  "cSpell.words": [
    "esbenp",
    "esbuild",
    "oxlint",
    "turbopack",
    "vercel",
    "vitest"
  ]
}
